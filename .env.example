# Database (SQLite)
DATABASE_URL=./data/app.db

# Better Auth
BETTER_AUTH_SECRET=your-secret-here
BETTER_AUTH_SESSION_EXPIRES_IN=28800
BETTER_AUTH_SESSION_UPDATE_AGE=3600

# Keycloak
KEYCLOAK_URL=https://keycloak.example.com
KEYCLOAK_CLIENT_ID=my-app
KEYCLOAK_LOGOUT_ENABLED=true

# Realm Lookup Service
# GET ${REALM_SERVICE_URL}/${userId} → { "realm": "acme-corp" }
REALM_SERVICE_URL=https://config-service.example.com/api/realm

# Redis (client secrets + config)
REDIS_URL=redis://localhost:6379
# Key pattern: ${REDIS_KEY_PREFIX}:${KEYCLOAK_CLIENT_ID}:<realm_id> → client_secret
REDIS_KEY_PREFIX=keycloak-config
